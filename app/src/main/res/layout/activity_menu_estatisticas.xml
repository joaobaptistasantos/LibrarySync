<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuEstatisticas"
    android:background="@drawable/app_wallpaper"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/barraSuperior_MenuEstatisticas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backArrow_MenuEstatisticas"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            android:contentDescription="@null"
            android:onClick="back"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titulo_MenuEstatisticas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:text="@string/menuEstatisticas"
            android:textColor="@color/colorApp"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logoApp_MenuEstatisticas"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@null"
            android:src="@drawable/app_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/barraSuperior_MenuEstatisticas"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/round_corner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="12dp"
            android:paddingBottom="15dp">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/gabineteNumero_MenuReserva">

                <TextView
                    android:id="@+id/numUtilRegistadosTitle_MenuReservar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/numUtilizadoresRegistados"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_column="0"
                    android:layout_row="0"/>

                <TextView
                    android:id="@+id/numUtilRegistadosText_MenuReservar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1111"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_column="1"
                    android:layout_row="0"/>

                <TextView
                    android:id="@+id/numTotalReservasTitle_MenuReservar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/numTotalReservas"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/numTotalReservasText_MenuReservar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="253"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/numReservasConcluidasTitle_MenuReservar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/numReservasConcluidas"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/numReservasConcluidasText_MenuReservar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="141"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/numReservasCanceladasTitle_MenuReservar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/numReservasCanceladas"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/numReservasCanceladasText_MenuReservar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:layout_marginTop="3dp"/>

            </GridLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>